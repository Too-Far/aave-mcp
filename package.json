{
  "name": "aave-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) server for Aave protocol data",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "aave-mcp": "./bin/aave-mcp"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --ext ts --exec ts-node src/index.ts",
    "build": "npx tsc",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "docker:build": "docker build -t aave-mcp:latest ."
  },
  "keywords": [
    "aave",
    "defi",
    "mcp",
    "protocol",
    "blockchain",
    "ethereum"
  ],
  "author": "Too-Far",
  "license": "MIT",
  "dependencies": {
    "@aave/contract-helpers": "^1.33.1",
    "@aave/math-utils": "^1.33.1",
    "@bgd-labs/aave-address-book": "^4.19.3",
    "@modelcontextprotocol/sdk": "^1.11.1",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "ethers": "^5.7.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.13",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "yarn@1.22.22+sha1.ac34549e6aa8e7ead463a7407e1c7390f61a6610"
}
